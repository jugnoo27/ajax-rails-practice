<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label "Name :", class: 'mt-1 fw-bold' %>
    </div>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.search_field :name_with_email_cont, class: 'form-control', placeholder: 'Search by name' %>
      </div>
    </div>
    <div class="col-md-2">
      <%= link_to 'Reset', users_path, class: "btn btn-outline-danger" %>
    </div>
  </div>
<% end %>
